# -------------------------
# Ветка Quins (5 экранов) - "честная цена"
# Открывает концовку Quins только при 3/3 правильных выборах
# -------------------------

label branch_quins:

    $ quins_score = 0

    scene bg cyberspace_church
    with fade

    play music "audio/music/quins.mp3" fadein 2.0 loop volume 0.008

    show hamayumi at left

    hamayumi "Он опасен спокойствием."
    voice "audio/Hamayumi/quins/1.mp3"
    hamayumi "Тут чинят головы."
    voice "audio/Hamayumi/quins/2.mp3"
    hamayumi "Иногда - вместе с человеком."
    hide hamayumi
    show quins at center
    with dissolve

    quins "Тише... ты в безопасности. Здесь можно дышать."
    quins "Я вижу, как ты держишься из последних сил - и всё равно идёшь."
    quins "Это важно. Это говорит о тебе больше, чем любые слова."

    oliver "Квинсяра. Ты чё сделал!?"
    oliver "Злостный манипулятор.."
    oliver "Ты чё сделал!? А!"
    oliver "Это ты меня сюда затащил!"
    oliver "За что ты мне мстишь?"
    oliver "Глупышь..."
    oliver "Фейс палм крч"

    quins "Ты не обязан быть уверенным."
    quins "Достаточно, что ты пришёл."
    quins "Я не буду давить. Я буду рядом настолько, насколько тебе комфортно."

    menu:
        "Quins - первый шаг"

        "Давай держаться вместе.":
            $ quins_score += 1
            quins "Хорошо. Спасибо, что сказал прямо."
            quins "Я буду говорить ясно и аккуратно, чтобы тебе не стало тяжелее."
            voice "audio/Hamayumi/quins/3.mp3"
            show hamayumi at left
            hamayumi "Ей можно верить."
            hide hamayumi

        "Ты знаешь что это за место?":
            quins "Сейчас это не самое важное."
            quins "Важно то, что твой выбор настоящий - и я уважаю его."
            oliver "Какой выбор?"
            oliver "О чем ты...."
            quins "Понимаю. Можешь спрашивать. Я не обижусь."

        "Всё хватит меня доканывать.":
            quins "Сильным быть не стыдно."
            quins "Но если сила - чтобы перестать чувствовать, ты потеряешь себя."
            oliver "Отстань!"
            quins "Знаешь. Просто больно признать."

    scene bg cyberspace_tunnel
    with dissolve
    show quins at left
    quins "Иногда выход выглядит как простая кнопка."
    quins "Но цена почти всегда - кусочек памяти."
    quins "Я не заставлю тебя. Я только помогу выбрать честно."

    oliver "Это ничего не объясняет"
    oliver "Что это впереди?"

    quins "Страх - нормальный."
    quins "Держи его в ладонях, не прячь. И выбирай."

    "На двери надпись:"
    "ПРОЙДЕТ ТОЛЬКО ЧЕСТНЫЙ"
    "ДОБРЫЙ"
    "начос"

    menu:
        "Что отдать двери?"

        "Шокирующие воспоминание":
            quins "Если выбросить страх, он найдёт другой вход."
            quins "Лучше научиться смотреть на него, а не вырывать с корнем."
            oliver "Да мне уже реально пофиг"
            oliver "Я реально ZXC ПСИхо кид"
            oliver "Эх..."
            oliver "Вот бы в дотанчик с ловпозам и картоххай"

            quins "Научишься. По шагу."

        "Тёплое воспоминание":
            $ quins_score += 1
            quins "Ты очень смелый."
            quins "Отдать тёплое - значит доверять, что тепло вернётся."
            oliver "Я..."
            oliver "Я не хочу тебя терять..."
            oliver "Ты мне нужен..."
            quins "Я знаю. Дыши. Я рядом."

        "Пустышку (соврать)":
            quins "Ты пытаешься защититься хитростью."
            quins "Я не осуждаю. Но дверь чувствует ложь."
            oliver "Просто мне есть что скрывать ;)"
            quins "Понимаю. И всё же - честность здесь бережнее."

    scene bg cyberspace_market
    with dissolve

    show zombi at right

    show quins at left
    with dissolve

    zombi "О, вы вдвоём."
    zombi "АХАХАХАХ"
    zombi "Квин и салатик"
    zombi "Тили..Тили..."
    zombi "..."
    zombi "КАИН"
    voice "audio/Hamayumi/quins/4.mp3"
    show hamayumi at left
    hamayumi "Не отвечай."
    hide hamayumi

    quins "Смотри на меня."
    quins "Держись за мой голос. Мы не обязаны это слушать."

    menu:
        "Квинс пытаеться в соблазн?"

        "Спросить о ситуации":
            zombi "Я упрощаю тебя."
            quins "Не нужно."
            quins "Пойдём. Не трать на это своё внимание."
            oliver "Вы оба дебили"
            quins "Ты живой. Это не ошибка."

        "Убежать что есть мочи":
            zombi "Установка началась."
            voice "audio/Hamayumi/quins/5.mp3"
            show hamayumi at left
            hamayumi "..."
            hide hamayumi
            quins "Эй. Слушай меня."
            quins "Не ругай себя. Мы будем исправлять."
            oliver "БЕЖИИИИМ!"
            oliver "ВСЕГОВОРЯТ ЧТО Я БАЛБЕC"
            oliver "ЧТО Я СБЕРЕЗЫ СЛЕЗ"
            oliver "НЕ ЧЕЛОВЕК А ------"
            quins "Я знаю. Просто держись."

        "Нет времени на сомнения...":
            $ quins_score += 1
            quins "Вот так."
            quins "Без споров. Без оправданий."
            zombi "Ладно. Пока."
            oliver "Я... руки дрожат..."
            quins "Это пройдёт. Ты сделал правильный шаг."

    hide zombi
    with dissolve

    scene bg cyberspace_tunnel
    with dissolve
    show quins at center

    quins "Выход - не дверь."
    quins "Это готовность не прятаться, даже когда внутри шумно."
    quins "И ты уже ближе, чем думаешь."

    menu:
        "Ответ Quins"

        "Я хочу уйти, даже если там будет тяжело":
            quins "Спасибо."
            quins "Это звучит честно."
            quins "Тогда шанс есть."
            oliver "Я... не уверен, что выдержу..."
            quins "Справишься. Не один."

        "Я хочу уйти, потому что тут скучно":
            quins "Тогда ты просто меняешь декорации."
            quins "И пустота догонит."
            oliver "Наверное... я избегаю..."
            quins "Это тоже можно заметить и перестать делать. Со временем."

        "Я хочу остаться, но чтобы ты была рядом":
            quins "Я понимаю, почему ты так говоришь."
            quins "Но я не якорь."
            quins "Я - проводник."
            oliver "Я... цепляюсь..."
            quins "Тогда я помогу тебе отпустить - мягко."

    scene bg cyberspace_church
    with fade
    show quins at center
    if quins_score == 3:
        $ quins_done = True
        quins "Я запомнила твою траекторию."
        quins "Ты выбирал не идеальные слова - но честные шаги."
        quins "В ядре у тебя будет вариант без упрощения."
        voice "audio/Hamayumi/quins/6.mp3"
        show hamayumi at center
        hamayumi "Это открывает выход."
        hide hamayumi
        oliver "А ну понятно "
        oliver "Теперь я всё понял"
        oliver "Жизнь она как колодец..."
        oliver "Там вода..."
        oliver "Ведро.."
        oliver "..."
        quins "Получилось. И я горжусь твоей внимательностью к себе."
    else:
        $ quins_done = False
        quins "Ты ещё не готов."
        quins "Не потому что ты слабый."
        quins "А потому что ты пока защищаешься там, где нужно быть честнее."
        oliver "НЕЕТ ПРОСТИ МЕНЯ пжпж"
        quins "Не извиняйся. Просто продолжай. Я верю, что ты дойдёшь."

    hide quins
    with dissolve

    call ambient_reset
    jump act2_after_quins
