# ------------------------------------------------------------
# branch_nighstess.rpy
# Ветка Nighstess (расширенная) — "инженерия принятия"
# Открывает концовку Nighstess только при 3/3 правильных выборах
# ------------------------------------------------------------

label branch_nighstess:

    $ nighstess_score = 0

    # -------------------------
    # Экран 1 — вход
    # -------------------------
    scene cyberspace_rooftop
    with fade

    play music "audio/nighstess_theme.ogg" fadein 1.5

    show nighstess at center
    with dissolve

    nighstess "Ты всё ещё ищешь выход?"
    nighstess "Здесь никто не держит силой."
    show hamayumi at left
    show nighstess at right
    hamayumi "Он опасен спокойствием."
    hamayumi "С ним не спорят — к нему привыкают."

    menu:
        "Nighstess — тезис"


        "Это иллюзия.":
            nighstess "И всё же ты здесь."
            hamayumi "Иллюзии тоже требуют участия."
            hamayumi "Ты платишь вниманием."

        "Ты хочешь, чтобы я остался?":
            hide hamayumi
            nighstess "Я хочу, чтобы ты не притворялся."
            nighstess "Остаться — это слово."
            nighstess "Принять — это действие."
        "А если реальный мир хуже?":
            hide hamayumi
            $ nighstess_score += 1
            nighstess "Вот честный вопрос."
            nighstess "Не о свободе. О сравнении боли."


    # -------------------------
    # Экран 2 — пауза/разметка понятий
    # -------------------------
    scene cyberspace_pause
    with dissolve
    show nighstess at center
    nighstess "В реальности ты диагноз."
    nighstess "Здесь ты процесс, который может думать."
    hide nighstess
    show hamayumi at left
    show nighstess at right
    hamayumi "Он подменяет ярлыки функцией."
    hamayumi "Так легче согласиться."

    menu:
        "Ответ"

        "А если бегство — форма выживания?":
            $ nighstess_score += 1
            nighstess "Тогда ты понимаешь."
            nighstess "Выживание — не позор."
            nighstess "Позор — делать вид, что это не выбор."

        "Ты оправдываешь бегство.":
            nighstess "Я называю вещи своими именами."
            hamayumi "Имя — это ещё не смысл."
            hamayumi "Смысл — в том, что ты сделаешь дальше."

        "Я ищу Quins.":
            nighstess "Тогда ты ищешь обещание."
            nighstess "И хочешь, чтобы оно было простым."
            nighstess "Но простое обещание — всегда ловушка."

    # -------------------------
    # Экран 3 — сим-комната: демонстрация "вариантов"
    # -------------------------
    scene cyberspace_simroom
    with dissolve
    show nighstess at center
    nighstess "Я показываю варианты."
    nighstess "Не заставляю."

    hamayumi "Он всегда добавляет эту строчку."
    hamayumi "Как подпись под контрактом."

    menu:
        "Оценка Nighstess"

        "Ты адаптировался.":
            nighstess "Наконец."
            nighstess "Адаптация — не сдача."
            nighstess "Это способ остаться собой при изменённой среде."

        "Ты сломался.":
            nighstess "Ломаются те, кто выходит."
            nighstess "Здесь просто меняют форму."
            hamayumi "Меняют форму… и называют это зрелостью."

        "Ты боишься выйти снова.":
            nighstess "Страх — не аргумент."
            nighstess "Это данные."
            hamayumi "И данные обычно используют против тебя."

    # -------------------------
    # Экран 4 — новый: "проверка субъекта" (без очков)
    # -------------------------
    scene cyberspace_core
    with fade

    show nighstess at center
    with dissolve

    nighstess "Ты думаешь, что выбираешь."
    nighstess "Но выбор возможен только у того, кто признаёт цену."

    hamayumi "Он поднимает ставку."
    hamayumi "Не угрозой. Контекстом."

    nighstess "Скажи: чего ты боишься потерять сильнее всего?"

    menu:
        "Проверка"

        "Я боюсь потерять право передумать.":
            nighstess "Это хорошая формулировка."
            nighstess "Не свобода. Не комфорт."
            nighstess "Право на изменение вектора."
            hamayumi "И он сейчас попробует купить у тебя это право."

        "Я боюсь потерять себя.":
            nighstess "Себя нельзя потерять одним решением."
            nighstess "Себя теряют маленькими уступками."
            hamayumi "И они всегда выглядят разумно."

        "Я боюсь, что это просто удобно.":
            nighstess "Удобство — не грех."
            nighstess "Грех — притворяться, что удобство равно истине."

    # -------------------------
    # Экран 5 — новый: "три режима" (без очков)
    # -------------------------
    scene cyberspace_lab
    with dissolve
    show nighstess at center
    nighstess "Давай без философии."
    nighstess "Я покажу, как выглядит 'принять' в механике."

    nighstess "Три режима."
    nighstess "И каждый выглядит как свобода, пока ты не видишь цену."

    menu:
        "Режимы"

        "Режим 'Тишина'.":
            nighstess "Шум снижается."
            nighstess "Тревога не исчезает — она перестаёт иметь голос."
            hamayumi "И ты начнёшь путать тишину с ответом."

        "Режим 'Фокус'.":
            nighstess "Ты становишься эффективным."
            nighstess "Твоё 'хочу' превращается в 'делаю'."
            hamayumi "Пока однажды не заметишь, что 'хочу' больше не приходит."

        "Режим 'Отражение'.":
            nighstess "Тебе показывают тебя."
            nighstess "Без оправданий, без героизма."
            hamayumi "Самый честный режим."
            hamayumi "Поэтому его редко выбирают."

    # -------------------------
    # Экран 6 — новый: давление среды/моральный крючок (без очков)
    # -------------------------
    scene cyberspace_corridor
    with dissolve
    show hamayumi at left
    hamayumi "Если ты останешься…"
    hamayumi "Ты начнёшь объяснять это другим."

    hamayumi "И однажды перестанешь отличать объяснение от оправдания."
    show nighstess at right
    nighstess "Или научится."

    hamayumi "Или станет проповедником."
    hamayumi "Без кафедры. Просто голосом внутри."

    nighstess "Я не прошу верить."
    nighstess "Я прошу смотреть на последствия."
    nighstess "И не прятаться за слова."

    # -------------------------
    # Экран 7 — возвращение на крышу: решение (3-й балл)
    # -------------------------
    scene cyberspace_rooftop
    with dissolve
    show nighstess at right
    nighstess "Я не переписываю тебя."
    nighstess "Я предлагаю жить здесь осознанно."

    menu:
        "Решение"

        "Я не готов решать.":
            nighstess "Тогда решат за тебя."
            hamayumi "И ты назовёшь это спокойствием."
            hamayumi "Потому что так проще выдержать стыд."

        "Отдай мне автопилот.":
            nighstess "Можно."
            nighstess "Но автопилот любит, когда ты исчезаешь из решения."
            hamayumi "И тогда остаётся только маршрут."
            hamayumi "Без твоего имени."

        "Я хочу остаться и принять это.":
            $ nighstess_score += 1
            nighstess "Тогда у тебя будет режим в ядре."
            nighstess "Не клетка."
            nighstess "Интерфейс ответственности."

    # -------------------------
    # Экран 8 — итог и флаг
    # -------------------------
    scene cyberspace_city
    with fade

    if nighstess_score == 3:
        $ nighstess_done = True
        nighstess "Я отметил твой вектор."
        nighstess "В ядре тебе дадут режим."
        nighstess "Ты не получишь счастье."
        nighstess "Ты получишь честность без боли-шума."
        hamayumi "Это откроет её концовку."
        hamayumi "Но помни: режим — это инструмент."
        hamayumi "Инструменты любят становиться привычкой."
    else:
        $ nighstess_done = False
        nighstess "Ты ещё не выбрал."
        nighstess "Ты коллекционируешь слова."
        hamayumi "Слова без решения — просто шум."
        hamayumi "А шум — идеальная маскировка страха."

    hide nighstess
    with dissolve

    call ambient_reset
    jump act2_after_nighstess
